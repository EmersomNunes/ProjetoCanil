{{>partials/header}}

{{#banner}}
<section class="banner" style="background-image: url('images/{{background}}')">{{title}}</section>
<h2>{{title}} disponíveis para adoção</h2>
{{/banner}}

<div class="container list">
    {{#list}}
        <div class="item">
            <img src="images/{{ image }}" class="item--image" />
            <div class="">{{ name }}</div>
            <div class="">{{ color }}</div>
            <div class="">{{ sex }}</div>
        </div>
    {{/list}}
</div>

{{^list}}
    <div container no-list>
        <h2>Não há animais disponíveis nestas condições.</h2>
    </div>
{{/list}}

{{>partials/footer}}